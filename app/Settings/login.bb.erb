<div id="pageTitle">
    <h1>Login</h1>
</div>

<div id="toolbar">
    <%=  link_to "Back", :action => :index %>
</div>

<div id="content">
    <form method="POST" action="<%=url_for(:action => 'do_login')%>">  

        <% if @msg %>
          <div class="alert" align="center"><%= @msg %></div>
        <% end %>

        <table>

            <tr>
                 <td width="100px" class="fieldLabel">Login</td>
                 <td><input type="text" maxlength="100" name="login"/></td>
             </tr>

             <tr>
                 <td width="100px" class="fieldLabel">Password</td>
                 <td><input type="password" maxlength="100" name="password"/></td>
             </tr>
        </table>

        <button class="standardButton" align="center" type="submit">Login</button>
    </form>
</div>




