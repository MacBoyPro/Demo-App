<div id="pageTitle">
    <h1>New Mod</h1>
</div>

<div id="toolbar">
    <%=link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%=url_for(:action => :create)%>">
	    <input type="hidden" name="id" value="<%=@mod.object%>"/>
        <table>
    		
    		  <tr>
    			  <td width="100px">Title: </td>
    			  <td><input type="text" name="mod[title]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td width="100px">Description: </td>
    			  <td><input type="text" name="mod[description]"/></td>
    		  </tr>
    		
        </table>
    	<button type="submit" value="Create"/>
    </form>
</div>